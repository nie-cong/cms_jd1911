<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.briup.apps.cms.dao.extend.RoleExtendMapper">
  <select id="selectByUserId" resultType="com.briup.apps.cms.bean.Role">
  	SELECT r.*
  	FROM base_role r,base_user_role ur
  	WHERE r.id=ur.role_id
  	AND ur.user_id=#{id,jdbcType=BIGINT}
  </select>
  
  <select id="selectAllWithPrivilege" resultMap="BaseRoleExtendResultMap">
  	SELECT *
  	FROM base_role
  </select>
  
  <resultMap
          id="BaseRoleExtendResultMap"
          type="com.briup.apps.cms.bean.extend.RoleExtend"
          extends="com.briup.apps.cms.dao.RoleMapper.BaseResultMap"
  >
    <collection property="privileges" column="id" 
    select="com.briup.apps.cms.dao.extend.PrivilegeExtendMapper.selectByRoleId"></collection>
  </resultMap>
</mapper>